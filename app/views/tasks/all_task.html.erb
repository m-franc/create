                    <div class="back">
            <%= link_to root_path do %>
              <i class="fa-solid fa-arrow-left"></i>
              </div>
            <% end %>
<div class="task-title">
<h1>Upcoming task</h1>
</div>
<div class="all-task-container">
<div class="card-all-task-container">
  <% @tasks.each do |task| %>
    <%= link_to project_path(task.project.id), class: 'text-decoration-none' do %> <!-- Le lien englobe toute la carte -->
      <div class="card-all-tasks">
        <div class="card-all-tasks-image">
          <% if task.project.image.attached? %>
            <%= image_tag task.project.image, class: 'card-image', alt: "#{task.project.name} Image" %>
          <% else %>
            <%= image_tag "unavailable_image.jpg", class: 'card-image', alt: "No image available" %>
          <% end %>
        </div>
        <div class="card-content">
          <h2><%= task.name %></h2>
          <p><strong>Project:</strong> <%= task.project.name %></p>
          <p><strong>Description:</strong> <%= task.description %></p>
          <p><strong>Deadline:</strong> <%= task.deadline%></p>
        </div>
      </div>
    <% end %>  <!-- Fin du lien -->
  <% end %>
</div>
</div>
