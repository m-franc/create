<div class="container py-5 no-padding-top">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow">
        <div class="card-body p-4">
          <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Edit Task</h1>
          </div>

          <%= form_with(model: [@project, @task], local: true) do |form| %>

            <div class="mb-4">
              <%= form.label :name, class: "form-label-red" %>
              <%= form.text_field :name, class: "form-control ", placeholder: "Enter task name" %>
            </div>

            <div class="mb-4">
              <%= form.label :description, class: "form-label-red" %>
              <%= form.text_area :description, class: "form-control", rows: 4, placeholder: "Describe the task..." %>
            </div>

            <div class="row mb-4">
              <div class="col-md-6">
                <%= form.label :deadline, class: "form-label-red" %>
                <%= form.text_field :deadline,
                  class: "form-control",
                  placeholder: "Select deadline",
                  data: {
                    controller: "datepicker",
                    datepicker_date_format: "Y-m-d",
                    datepicker_min_date: Time.zone.now
                  }
                %>
              </div>


            <div class="col-md-6">
              <%= form.label :status, class: "form-label-red" %>
              <%= form.select :status, id:"statusCheck",
                  ['in_progress', 'completed'],
                  {},
                  {
                    class: "form-select",
                    data: { controller: "tom-select" }
                  }
              %>
            </div>

              <div class="mb-4">
                <%= form.label :user_id, "Assign to", class: "form-label-red" %>
                <%= form.select :user_id,
                    @project.joined_users.map { |user| [user.username, user.id] },
                    { include_blank: "Select team member" },
                    {
                      class: "form-select",
                      data: {
                        controller: "tom-select",
                        placeholder: "Choose assignee..."
                      }
                    }
                %>
              </div>
            </div>

            <div class="d-flex justify-content-end gap-2">
              <%= form.submit "Update Task", class: "btn-task" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
