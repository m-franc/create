<div class="tasks-dashboard">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h3>Project Tasks</h3>
    <%= link_to "Add Task", new_project_task_path(@project), class: "btn btn-primary btn-sm" %>
  </div>
  <% if @project.tasks.any? %>
    <div class="list-group">
      <% @project.tasks.each do |task| %>
        <div class="list-group-item">
          <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-1"><%= task.name %></h5>
            <%# <small class="text-danger"><%= task.deadline&.strftime("%B %d, %Y") %>
          </div>
          <p class="mb-1"><%= task.description %></p>
          <div class="task-actions">
            <%= link_to "Edit", edit_project_task_path(@project, task), class: "btn btn-sm btn-outline-secondary" %>
            <%= link_to "Delete", project_task_path(@project, task),
                data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                class: "btn btn-sm btn-outline-danger" %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-muted text-center">No tasks yet</p>
  <% end %>
</div>
