<div class="project">

<div class="projects-container">
  <div class="projects-header">
    <h1>Projects List</h1>
    <%= link_to ' + New Project', new_project_path, class: 'btn btn-primary', data: {turbo: false}%>
  </div>

  <% if @projects.any? %>
    <div class="card-container">
      <% @projects.each do |project| %>
        <div class="card">
          <% if project.image.attached? %>
            <%= image_tag project.image, class: 'card-image', alt: "#{project.name} Image" %>
          <% else %>
            <%= image_tag "unavailable_image.jpg", class: 'card-image', alt: "No image available" %>
          <% end %>

          <div class="card-content">
            <h2><%= link_to project.name, project_path(project.id) %></h2>
            <p><strong>Location:</strong> <%= project.location %></p>
            <p><strong>Start Date:</strong> <%= project.starting_date %></p>
            <p><strong>End Date:</strong> <%= project.end_date %></p>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="no-projects">Aucun projet trouv√©.</p>
  <% end %>
</div>
</div>
