
<div class="back">
<%= link_to projects_path do %>
  <i class="fa-solid fa-arrow-left"></i>
<% end %>
</div>

<div class="center">
<%= form_with(model: @project, local: true) do |form| %>

  <div class="project-red">
    <h3>Create a new project</h3>
    <div class="count"></div>

    <!-- Page 1 -->
    <div class="page" id="page-1">
      <div class="field">
        <%= form.label :name %>
        <%= form.text_field :name %>
      </div>
      <div class="field">
        <%= form.label :description %>
        <%= form.text_field :description %>
      </div>
      <div class="field">
        <%= form.label :location %>
        <%= form.text_field :location %>
      </div>
      <div class="actions">
        <button type="button" class="button" id="button-n">
          Next <i class="fa-solid fa-arrow-right"></i>
        </button>
      </div>
    </div>

    <!-- Page 2 -->
    <div class="page" id="page-2">
      <div class="field">
        <%= form.label :date %>
        <%= form.text_field :starting_date,
          data: {
            controller: "datepicker",
            datepicker_date_format: "Y-m-d",
            datepicker_min_date: Time.zone.now
          }
        %>

      </div>

      <div class="form-group">
        <%= form.label :image, "Upload Project Image" %>
        <%= form.file_field :image, class: "form-control" %>
      </div>

      <div class="actions">
             <button type="button" class="button" id="button-b">
          <i class="fa-solid fa-arrow-left"></i> Back
        </button>
        <button type="button" class="button" id="button-n">
          Next <i class="fa-solid fa-arrow-right"></i>
        </button>
      </div>
    </div>

    <!-- Page 3 -->
    <div class="page" id="page-3">
      <div class="field">
        <%= form.label :image, "Add members" %>
        <%= form.select :joined_user_ids,
          User.all.map { |user| [user.username, user.id] },
          {},
          {
            placeholder: "Search a user...",
            multiple: true,
            data: { controller: "tom-select", tom_select_options_value: { tags: true } }
          }
        %>
      </div>

      <div class="actions">
               <button type="button" class="button" id="button-b">
                    <i class="fa-solid fa-arrow-left"></i> Back
              </button>

        <%= form.submit 'Create Project' %>
      </div>
    </div>

  </div>
<% end %>
</div>
