<%= link_to project_path(@project), class: 'back' do %>
  <i class="fa-solid fa-arrow-left"></i>
<% end %>

  <%= form_with(model: @project, local: true) do |form| %>

    <div class="form-container">
      <div class="left">

  <h1>Edit project</h1>
        <div class="field">
          <%= form.label :name %>
          <%= form.text_field :name %>
        </div>

        <div class="field">
          <%= form.label :description %>
          <%= form.text_field :description %>
        </div>

        <div class="field">
          <%= form.label :location %>
          <%= form.text_field :location %>
        </div>
      </div>

      <div class="right">
        <div class="field">
          <%= form.label :starting_date %>
          <%= form.text_field :starting_date,
            data: {
              controller: "datepicker",
              datepicker_date_format: "Y-m-d",
              datepicker_min_date: Time.zone.now
            }
          %>
        </div>

        <div class="field">
          <%= form.label :end_date %>
          <%= form.text_field :end_date,
            data: {
              controller: "datepicker",
              datepicker_date_format: "Y-m-d",
              datepicker_min_date: Time.zone.now
            }
          %>
        </div>

        <div class="field">
          <%= form.label :Members %>
          <%= form.select :joined_user_ids, User.all.map { |user| [ user.username, user.id ] }, {}, { placeholder: "Rechercher un utilisateur...", multiple: true, data: { controller: "tom-select", tom_select_options_value: { tags: true } } } %>
        </div>

        <div class="form-group">
          <%= form.label :image, "Upload Project Image" %>
          <%= form.file_field :image, class: "form-control" %>
        </div>
      </div>

    <div class="actions">
      <div class="edit-btn">
      <%= form.submit 'Edit Project' %>
      </div>
    </div>
  <% end %>
    </div>
