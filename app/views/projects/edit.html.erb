<h1>Edit project</h1>

<%= form_with(model: @project, local: true) do |form| %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

    <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>

  <div class="field">
    <%= form.label :location %>
    <%= form.text_field :location %>
  </div>

       <div class="field">

  <%= form.text_field :starting_date,
            as: :string,
            input_html: { data: { controller: "datepicker" } } %>

              </div>

    <div class="field">
    <%= form.label :starting_date %>
    <%= form.text_field :starting_date %>
  </div>

     <div class="field">
    <%= form.label :end_date %>
    <%= form.text_field :end_date %>
  </div>


 <div class="form-group">
  <%= form.label :image, "Upload Project Image" %>
  <%= form.file_field :image, class: "form-control" %>
 </div>

  <div class="actions">
    <%= form.submit 'Edit Project' %>
  </div>
<% end %>
