<div class="project">
  <div class="project-header">
    <% if @project.image.present? %>
      <%= image_tag @project.image, class: 'project-image' %>
    <% else %>
      <p>add image pls</p>
    <% end %>

    <div class="project-details">
      <h2><%= @project.name %></h2>
      <p><%= @project.description %></p>
      <%= link_to 'Edit Project', edit_project_path(@project), class: 'edit-link' %>
    </div>
  </div>

  <ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item" role="presentation">
      <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#home-tab-pane" type="button" role="tab" aria-controls="home-tab-pane" aria-selected="true">Dashboard</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile-tab-pane" type="button" role="tab" aria-controls="profile-tab-pane" aria-selected="false">Member</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="contact-tab" data-bs-toggle="tab" data-bs-target="#contact-tab-pane" type="button" role="tab" aria-controls="contact-tab-pane" aria-selected="false">Task</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="note-tab" data-bs-toggle="tab" data-bs-target="#note-tab-pane" type="button" role="tab" aria-controls="note-tab-pane" aria-selected="false">Note</button>
    </li>
     <li class="nav-item" role="presentation">
      <button class="nav-link" id="document-tab" data-bs-toggle="tab" data-bs-target="#document-tab-pane" type="button" role="tab" aria-controls="document-tab-pane" aria-selected="false">document</button>
    </li>
  </ul>

    <div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="home-tab-pane" role="tabpanel" aria-labelledby="home-tab" tabindex="0">
      <div id="infos">
        <p>Place: <%= @project.location %>
        Status: <%= @project.status %>
        Starting date: <%= @project.starting_date %>
        Creation: <%= @project.created_at %></p>
      </div>
      <div class="nav-project">
      </div>
      <div class="cards">
        <div class="card-project" id="task">
          <%= link_to "Task", project_tasks_path(@project), class: 'btn btn-primary' %>
        </div>
        <div class="card-project" id="card-2">
          <% @joined_users.each do |user| %>
            <li>
              <strong>Nom :</strong> <%= user.username %> <br>
            </li>
          <% end %>
          <p>members</p>
        </div>
        <div class="card-project" id="card-3">
          <%= link_to "Notes", project_notes_path(@project), class: 'btn btn-primary' %>
        </div>
        <div class="card-project" id="card-4">
          <%= link_to "Documents", project_documents_path(@project), class: 'btn btn-info' %>
        </div>
        <div class="card-project" id="card-5">
          <p>Message</p>
        </div>
      </div>
    </div>
    <div class="tab-pane fade" id="profile-tab-pane" role="tabpanel" aria-labelledby="profile-tab" tabindex="0">Member</div>
    <div class="tab-pane fade" id="contact-tab-pane" role="tabpanel" aria-labelledby="contact-tab" tabindex="0">Task</div>
    <div class="tab-pane fade" id="note-tab-pane" role="tabpanel" aria-labelledby="note-tab" tabindex="0">
      <%= render 'notes/dashboard_show', note: @note %>
    </div>
    <div class="tab-pane fade" id="document-tab-pane" role="tabpanel" aria-labelledby="document-tab" tabindex="0">
      <%= render "documents/dashboard_documents"%>
    </div>

  </div>

</div>


<a href="#all">Dashboard</a>
  <a href="#member">Member</a>
  <a href="<%= project_tasks_path(@project) %>">Task</a>
  <%= link_to "Note", project_notes_path(@project), data: { turbo_frame: "menu" } %>

  <a href="<%= project_documents_path(@project)%>">Documents</a>
  <a href="#messages">Messages</a>
