
<div class="note-form">
<%= form_with(model: [@project, @note], local: true, data: { turbo: false }) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, class: 'form-control', rows: 5 %>
  </div>

  <div class="form-group">
    <%= f.submit class: 'btn btn-primary' %>
    <%= link_to 'Back', project_notes_path(@project), class: 'btn btn-secondary' %>
  </div>
<% end %>
</div>
