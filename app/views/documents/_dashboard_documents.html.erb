<div class="container mt-4">

  <%= link_to project_path(@project), class: 'back' do %>
    <i class="fas fa-arrow-left"></i>
  <% end %>

  <div class="new-doc">
  <%= render "documents/document_new"%>
  </div>

  <h2>Documents for <%= @project.name %></h2>

  <div class="all-doc">
  <% @folders.each do |folder| %>
    <div class="card mb-4">
      <div class="card-header">
        <h5 class="mb-0">
          Folder: <%= folder || 'Root' %>
        </h5>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table">
            <thead>
              <tr>
                <th>Name</th>
                <th>Type</th>
                <th>Uploaded by</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @documents.where(folder_name: folder).each do |document| %>
                <tr>
                  <td><%= document.name %></td>
                  <td><small class="text-muted"><%= document.format&.upcase %></small></td>
                  <td><%= document.user.username %></td>
                  <td>
                    <%= link_to 'Download', download_project_document_path(@project, document), class: 'btn btn-sm btn-success' %>
                    <% if current_user == @project.user || (current_user == document.user) %>
                      <%= button_to 'Delete',
                          project_document_path(@project, document),
                          method: :delete,
                          form: { data: { turbo_confirm: 'Are you sure?' } },
                          class: 'btn btn-sm btn-danger' %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  <% end %>
</div>
</div>

<% content_for :head do %>
  <style>
    .modal-lg {
      max-width: 90% !important;
    }

    .img-thumbnail:hover {
      opacity: 0.8;
      transition: opacity 0.2s ease-in-out;
    }
  </style>
<% end %>
